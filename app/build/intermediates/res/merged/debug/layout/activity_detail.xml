<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="siesgst.tml17.idscan.DetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="Event Head"
        android:id="@+id/head_name"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Email"
        android:textSize="24sp"
        android:id="@+id/head_email"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="Event Name"
        android:id="@+id/event_name"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        tools:text="Contact Number"
        android:paddingBottom="30dp"
        android:id="@+id/head_contact"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/Scan"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:elevation="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:layout_gravity="center_horizontal"
        android:id="@+id/logout_id"/>

    <TextView
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/manual_addition"
        android:layout_gravity="center_horizontal"
        android:text="Add Manually"/>


</LinearLayout>
